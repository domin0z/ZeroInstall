<UserControl x:Class="ZeroInstall.App.Views.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">

    <Grid Background="{StaticResource SurfaceLightGrayBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Background="{StaticResource BackgroundWhiteBrush}"
                BorderBrush="{StaticResource BorderGrayBrush}"
                BorderThickness="0,0,0,1"
                Padding="20,14">
            <TextBlock Text="Settings"
                       Style="{StaticResource SubheaderText}"
                       FontSize="18" />
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="20,16">
            <StackPanel MaxWidth="600" HorizontalAlignment="Left">

                <!-- NAS Configuration -->
                <Border Background="{StaticResource BackgroundWhiteBrush}"
                        BorderBrush="{StaticResource BorderGrayBrush}"
                        BorderThickness="1" CornerRadius="6"
                        Padding="16,12" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="NAS Configuration"
                                   FontWeight="SemiBold" FontSize="15"
                                   Foreground="{StaticResource PrimaryTealBrush}"
                                   Margin="0,0,0,8" />
                        <TextBlock Text="UNC path to a shared NAS for profiles and reports."
                                   FontSize="12"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   Margin="0,0,0,8" />
                        <TextBox Text="{Binding NasPath, UpdateSourceTrigger=PropertyChanged}"
                                 Padding="8,6" FontSize="13" />
                    </StackPanel>
                </Border>

                <!-- Defaults -->
                <Border Background="{StaticResource BackgroundWhiteBrush}"
                        BorderBrush="{StaticResource BorderGrayBrush}"
                        BorderThickness="1" CornerRadius="6"
                        Padding="16,12" Margin="0,0,0,16">
                    <StackPanel>
                        <TextBlock Text="Defaults"
                                   FontWeight="SemiBold" FontSize="15"
                                   Foreground="{StaticResource PrimaryTealBrush}"
                                   Margin="0,0,0,12" />

                        <TextBlock Text="Default Transport Method"
                                   FontSize="13" Margin="0,0,0,4" />
                        <ComboBox SelectedItem="{Binding DefaultTransportMethod}"
                                  FontSize="13" Padding="8,4" Margin="0,0,0,12">
                            <ComboBox.Items>
                                <x:Static Member="core:TransportMethod.ExternalStorage"
                                          xmlns:core="clr-namespace:ZeroInstall.Core.Enums;assembly=ZeroInstall.Core" />
                                <x:Static Member="core:TransportMethod.NetworkShare"
                                          xmlns:core="clr-namespace:ZeroInstall.Core.Enums;assembly=ZeroInstall.Core" />
                                <x:Static Member="core:TransportMethod.DirectWiFi"
                                          xmlns:core="clr-namespace:ZeroInstall.Core.Enums;assembly=ZeroInstall.Core" />
                            </ComboBox.Items>
                        </ComboBox>

                        <TextBlock Text="Default Log Level"
                                   FontSize="13" Margin="0,0,0,4" />
                        <ComboBox SelectedItem="{Binding DefaultLogLevel}"
                                  FontSize="13" Padding="8,4">
                            <ComboBox.Items>
                                <sys:String xmlns:sys="clr-namespace:System;assembly=mscorlib">Verbose</sys:String>
                                <sys:String xmlns:sys="clr-namespace:System;assembly=mscorlib">Debug</sys:String>
                                <sys:String xmlns:sys="clr-namespace:System;assembly=mscorlib">Information</sys:String>
                                <sys:String xmlns:sys="clr-namespace:System;assembly=mscorlib">Warning</sys:String>
                                <sys:String xmlns:sys="clr-namespace:System;assembly=mscorlib">Error</sys:String>
                            </ComboBox.Items>
                        </ComboBox>
                    </StackPanel>
                </Border>

                <!-- About -->
                <Border Background="{StaticResource BackgroundWhiteBrush}"
                        BorderBrush="{StaticResource BorderGrayBrush}"
                        BorderThickness="1" CornerRadius="6"
                        Padding="16,12" Margin="0,0,0,12">
                    <StackPanel>
                        <TextBlock Text="About"
                                   FontWeight="SemiBold" FontSize="15"
                                   Foreground="{StaticResource PrimaryTealBrush}"
                                   Margin="0,0,0,8" />
                        <TextBlock Text="ZeroInstall Migrator"
                                   FontSize="13" FontWeight="SemiBold" />
                        <TextBlock Text="Portable PC migration tool for technicians."
                                   FontSize="12"
                                   Foreground="{StaticResource TextSecondaryBrush}" />
                    </StackPanel>
                </Border>

                <!-- Status -->
                <TextBlock Text="{Binding StatusMessage}"
                           Style="{StaticResource BodyText}"
                           Foreground="{StaticResource TextSecondaryBrush}"
                           Margin="0,8,0,0" />
            </StackPanel>
        </ScrollViewer>

        <!-- Bottom Bar -->
        <Border Grid.Row="2"
                Background="{StaticResource BackgroundWhiteBrush}"
                BorderBrush="{StaticResource BorderGrayBrush}"
                BorderThickness="0,1,0,0"
                Padding="20,10">
            <Grid>
                <Button Content="Cancel"
                        Style="{StaticResource SecondaryButton}"
                        Command="{Binding CancelCommand}"
                        HorizontalAlignment="Left"
                        Padding="16,8" />
                <Button Content="Save"
                        Style="{StaticResource AccentButton}"
                        Command="{Binding SaveCommand}"
                        HorizontalAlignment="Right"
                        Padding="24,8" />
            </Grid>
        </Border>
    </Grid>
</UserControl>
