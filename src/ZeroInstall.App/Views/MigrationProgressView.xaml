<UserControl x:Class="ZeroInstall.App.Views.MigrationProgressView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:converters="clr-namespace:ZeroInstall.App.Converters"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <converters:MigrationItemStatusToIconConverter x:Key="StatusToIcon" />
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibility" />
    </UserControl.Resources>

    <Grid Background="{StaticResource SurfaceLightGrayBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Background="{StaticResource BackgroundWhiteBrush}"
                BorderBrush="{StaticResource BorderGrayBrush}"
                BorderThickness="0,0,0,1"
                Padding="20,14">
            <TextBlock Text="Migration in Progress"
                       Style="{StaticResource SubheaderText}"
                       FontSize="18" />
        </Border>

        <!-- Progress Area -->
        <Border Grid.Row="1"
                Background="{StaticResource BackgroundWhiteBrush}"
                BorderBrush="{StaticResource BorderGrayBrush}"
                BorderThickness="0,0,0,1"
                Padding="20,16">
            <StackPanel>
                <ProgressBar Minimum="0" Maximum="1" Value="{Binding OverallPercent, Mode=OneWay}"
                             Height="8" Margin="0,0,0,8"
                             Foreground="{StaticResource AccentOrangeBrush}" />

                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="{Binding OverallPercentFormatted}"
                               FontSize="14" FontWeight="SemiBold"
                               Foreground="{StaticResource TextPrimaryBrush}" />
                    <StackPanel Grid.Column="2" Orientation="Horizontal">
                        <TextBlock Text="{Binding SpeedFormatted}"
                                   FontSize="12" Foreground="{StaticResource TextSecondaryBrush}"
                                   Margin="0,0,12,0" />
                        <TextBlock Text="{Binding EtaFormatted}"
                                   FontSize="12" Foreground="{StaticResource TextSecondaryBrush}" />
                    </StackPanel>
                </Grid>
                <TextBlock Text="{Binding StatusText}"
                           Style="{StaticResource BodyText}"
                           Foreground="{StaticResource TextSecondaryBrush}"
                           Margin="0,4,0,0" />
            </StackPanel>
        </Border>

        <!-- Item List -->
        <ListView Grid.Row="2"
                  ItemsSource="{Binding ItemProgress}"
                  BorderThickness="0"
                  Background="Transparent"
                  Margin="12,8"
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="4,2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="24" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <TextBlock Grid.Column="0"
                                   Text="{Binding Status, Converter={StaticResource StatusToIcon}}"
                                   FontSize="14"
                                   VerticalAlignment="Center"
                                   HorizontalAlignment="Center" />
                        <TextBlock Grid.Column="1"
                                   Text="{Binding DisplayName}"
                                   FontSize="13"
                                   VerticalAlignment="Center"
                                   Foreground="{StaticResource TextPrimaryBrush}" />
                        <TextBlock Grid.Column="2"
                                   Text="{Binding StatusMessage}"
                                   FontSize="12"
                                   VerticalAlignment="Center"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   Margin="12,0,0,0" />
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Bottom Bar -->
        <Border Grid.Row="3"
                Background="{StaticResource BackgroundWhiteBrush}"
                BorderBrush="{StaticResource BorderGrayBrush}"
                BorderThickness="0,1,0,0"
                Padding="20,10">
            <Button Content="Cancel"
                    Style="{StaticResource SecondaryButton}"
                    Command="{Binding CancelCommand}"
                    Visibility="{Binding IsRunning, Converter={StaticResource BoolToVisibility}}"
                    HorizontalAlignment="Right"
                    Padding="24,8" />
        </Border>
    </Grid>
</UserControl>
