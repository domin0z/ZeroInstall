<UserControl x:Class="ZeroInstall.App.Views.DiscoveryView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:converters="clr-namespace:ZeroInstall.App.Converters"
             xmlns:scm="clr-namespace:System.ComponentModel;assembly=WindowsBase"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibility" />
        <converters:InverseBoolConverter x:Key="InverseBool" />
        <converters:MigrationTierToBadgeConverter x:Key="TierToBadge" />
        <converters:BytesToHumanReadableConverter x:Key="BytesToHuman" />

        <CollectionViewSource x:Key="GroupedItems" Source="{Binding Items}">
            <CollectionViewSource.GroupDescriptions>
                <PropertyGroupDescription PropertyName="ItemType" />
            </CollectionViewSource.GroupDescriptions>
            <CollectionViewSource.SortDescriptions>
                <scm:SortDescription PropertyName="ItemType" />
                <scm:SortDescription PropertyName="DisplayName" />
            </CollectionViewSource.SortDescriptions>
        </CollectionViewSource>
    </UserControl.Resources>

    <Grid Background="{StaticResource SurfaceLightGrayBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Scan Status Bar -->
        <Border Grid.Row="0"
                Background="{StaticResource BackgroundWhiteBrush}"
                BorderBrush="{StaticResource BorderGrayBrush}"
                BorderThickness="0,0,0,1"
                Padding="20,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="{Binding ScanStatus}"
                               Style="{StaticResource BodyText}"
                               VerticalAlignment="Center" />
                    <!-- Spinning indicator while scanning -->
                    <TextBlock Text=" ..."
                               Visibility="{Binding IsScanning, Converter={StaticResource BoolToVisibility}}"
                               Foreground="{StaticResource PrimaryTealBrush}"
                               FontWeight="Bold"
                               VerticalAlignment="Center" />
                </StackPanel>

                <Button Grid.Column="1"
                        Content="Rescan"
                        Style="{StaticResource SecondaryButton}"
                        Command="{Binding ScanCommand}"
                        IsEnabled="{Binding IsScanning, Converter={StaticResource InverseBool}}"
                        Padding="12,6" />
            </Grid>
        </Border>

        <!-- Items List -->
        <ListView Grid.Row="1"
                  ItemsSource="{Binding Source={StaticResource GroupedItems}}"
                  BorderThickness="0"
                  Background="Transparent"
                  Margin="12,8"
                  ScrollViewer.HorizontalScrollBarVisibility="Disabled">

            <ListView.GroupStyle>
                <GroupStyle>
                    <GroupStyle.HeaderTemplate>
                        <DataTemplate>
                            <Border Background="{StaticResource SurfaceLightGrayBrush}"
                                    Padding="8,6"
                                    Margin="0,4,0,2">
                                <TextBlock Text="{Binding Name}"
                                           Style="{StaticResource SubheaderText}"
                                           FontSize="14" />
                            </Border>
                        </DataTemplate>
                    </GroupStyle.HeaderTemplate>
                </GroupStyle>
            </ListView.GroupStyle>

            <ListView.ItemTemplate>
                <DataTemplate>
                    <Grid Margin="4,2">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="Auto" />
                            <ColumnDefinition Width="Auto" />
                        </Grid.ColumnDefinitions>

                        <CheckBox Grid.Column="0"
                                  IsChecked="{Binding IsSelected}"
                                  Style="{StaticResource CheckBoxStyle}"
                                  VerticalAlignment="Center"
                                  Margin="0,0,8,0" />

                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock Text="{Binding DisplayName}"
                                       FontSize="13"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource TextPrimaryBrush}" />
                            <TextBlock Text="{Binding Description}"
                                       FontSize="11"
                                       Foreground="{StaticResource TextSecondaryBrush}"
                                       TextTrimming="CharacterEllipsis" />
                        </StackPanel>

                        <TextBlock Grid.Column="2"
                                   Text="{Binding EstimatedSizeFormatted}"
                                   FontSize="12"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   VerticalAlignment="Center"
                                   Margin="12,0" />

                        <Border Grid.Column="3"
                                Background="{StaticResource SurfaceLightGrayBrush}"
                                BorderBrush="{StaticResource BorderGrayBrush}"
                                BorderThickness="1"
                                CornerRadius="4"
                                Padding="6,2"
                                VerticalAlignment="Center">
                            <TextBlock Text="{Binding RecommendedTier, Converter={StaticResource TierToBadge}}"
                                       FontSize="11"
                                       FontWeight="SemiBold"
                                       Foreground="{StaticResource TextSecondaryBrush}" />
                        </Border>
                    </Grid>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>

        <!-- Summary Bar -->
        <Border Grid.Row="2"
                Background="{StaticResource BackgroundWhiteBrush}"
                BorderBrush="{StaticResource BorderGrayBrush}"
                BorderThickness="0,1,0,0"
                Padding="20,10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0" VerticalAlignment="Center">
                    <Run Text="{Binding SelectedCount, Mode=OneWay}" FontWeight="SemiBold" />
                    <Run Text=" items selected (" />
                    <Run Text="{Binding SelectedSizeFormatted, Mode=OneWay}" FontWeight="SemiBold" />
                    <Run Text=")" />
                </TextBlock>

                <Button Grid.Column="1"
                        Content="Select All"
                        Style="{StaticResource SecondaryButton}"
                        Command="{Binding SelectAllCommand}"
                        Padding="12,6"
                        Margin="0,0,8,0" />

                <Button Grid.Column="2"
                        Content="Select None"
                        Style="{StaticResource SecondaryButton}"
                        Command="{Binding SelectNoneCommand}"
                        Padding="12,6"
                        Margin="0,0,8,0" />

                <Button Grid.Column="3"
                        Content="Proceed"
                        Style="{StaticResource AccentButton}"
                        Command="{Binding ProceedCommand}"
                        Padding="16,6" />
            </Grid>
        </Border>
    </Grid>
</UserControl>
