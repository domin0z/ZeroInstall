<UserControl x:Class="ZeroInstall.App.Views.ProfileListView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:converters="clr-namespace:ZeroInstall.App.Converters"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibility" />
    </UserControl.Resources>

    <Grid Background="{StaticResource SurfaceLightGrayBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Background="{StaticResource BackgroundWhiteBrush}"
                BorderBrush="{StaticResource BorderGrayBrush}"
                BorderThickness="0,0,0,1"
                Padding="20,14">
            <Grid>
                <TextBlock Text="Migration Profiles"
                           Style="{StaticResource SubheaderText}"
                           FontSize="18"
                           VerticalAlignment="Center" />
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Right">
                    <Button Content="Create New"
                            Style="{StaticResource AccentButton}"
                            Command="{Binding CreateNewCommand}"
                            Padding="16,6"
                            Margin="0,0,8,0" />
                    <Button Content="Refresh"
                            Style="{StaticResource SecondaryButton}"
                            Command="{Binding RefreshCommand}"
                            Padding="16,6" />
                </StackPanel>
            </Grid>
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="20,16">
            <StackPanel MaxWidth="700" HorizontalAlignment="Left">

                <!-- Local Profiles -->
                <TextBlock Text="Local Profiles"
                           Style="{StaticResource SubheaderText}"
                           Margin="0,0,0,8" />

                <ListView ItemsSource="{Binding LocalProfiles}"
                          SelectedItem="{Binding SelectedProfile}"
                          BorderThickness="1"
                          BorderBrush="{StaticResource BorderGrayBrush}"
                          Background="{StaticResource BackgroundWhiteBrush}"
                          Margin="0,0,0,20"
                          MinHeight="60">
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <Grid Margin="8,6">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <StackPanel Grid.Column="0">
                                    <TextBlock Text="{Binding Name}"
                                               FontWeight="SemiBold" FontSize="14"
                                               Foreground="{StaticResource TextPrimaryBrush}" />
                                    <TextBlock Text="{Binding Description}"
                                               FontSize="12"
                                               Foreground="{StaticResource TextSecondaryBrush}"
                                               TextTrimming="CharacterEllipsis" />
                                </StackPanel>
                                <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right">
                                    <TextBlock Text="{Binding Author}"
                                               FontSize="11"
                                               Foreground="{StaticResource TextSecondaryBrush}"
                                               HorizontalAlignment="Right" />
                                    <TextBlock Text="{Binding ModifiedUtc, StringFormat='{}{0:yyyy-MM-dd}'}"
                                               FontSize="11"
                                               Foreground="{StaticResource TextSecondaryBrush}"
                                               HorizontalAlignment="Right" />
                                </StackPanel>
                            </Grid>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>

                <!-- NAS Profiles (conditional) -->
                <StackPanel Visibility="{Binding HasNasPath, Converter={StaticResource BoolToVisibility}}">
                    <TextBlock Text="NAS Profiles"
                               Style="{StaticResource SubheaderText}"
                               Margin="0,0,0,8" />

                    <ListView ItemsSource="{Binding NasProfiles}"
                              SelectedItem="{Binding SelectedProfile}"
                              BorderThickness="1"
                              BorderBrush="{StaticResource BorderGrayBrush}"
                              Background="{StaticResource BackgroundWhiteBrush}"
                              MinHeight="60">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="8,6">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="Auto" />
                                    </Grid.ColumnDefinitions>
                                    <StackPanel Grid.Column="0">
                                        <TextBlock Text="{Binding Name}"
                                                   FontWeight="SemiBold" FontSize="14"
                                                   Foreground="{StaticResource TextPrimaryBrush}" />
                                        <TextBlock Text="{Binding Description}"
                                                   FontSize="12"
                                                   Foreground="{StaticResource TextSecondaryBrush}"
                                                   TextTrimming="CharacterEllipsis" />
                                    </StackPanel>
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center" HorizontalAlignment="Right">
                                        <TextBlock Text="{Binding Author}"
                                                   FontSize="11"
                                                   Foreground="{StaticResource TextSecondaryBrush}"
                                                   HorizontalAlignment="Right" />
                                        <TextBlock Text="{Binding ModifiedUtc, StringFormat='{}{0:yyyy-MM-dd}'}"
                                                   FontSize="11"
                                                   Foreground="{StaticResource TextSecondaryBrush}"
                                                   HorizontalAlignment="Right" />
                                    </StackPanel>
                                </Grid>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </StackPanel>

                <!-- Status -->
                <TextBlock Text="{Binding StatusMessage}"
                           Style="{StaticResource BodyText}"
                           Foreground="{StaticResource TextSecondaryBrush}"
                           Margin="0,12,0,0" />
            </StackPanel>
        </ScrollViewer>

        <!-- Bottom Bar -->
        <Border Grid.Row="2"
                Background="{StaticResource BackgroundWhiteBrush}"
                BorderBrush="{StaticResource BorderGrayBrush}"
                BorderThickness="0,1,0,0"
                Padding="20,10">
            <Grid>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Left">
                    <Button Content="Load"
                            Style="{StaticResource AccentButton}"
                            Command="{Binding LoadProfileCommand}"
                            Padding="16,8"
                            Margin="0,0,8,0" />
                    <Button Content="Edit"
                            Style="{StaticResource SecondaryButton}"
                            Command="{Binding EditProfileCommand}"
                            Padding="16,8"
                            Margin="0,0,8,0" />
                    <Button Content="Delete"
                            Style="{StaticResource SecondaryButton}"
                            Command="{Binding DeleteProfileCommand}"
                            Padding="16,8" />
                </StackPanel>
                <Button Content="Back"
                        Style="{StaticResource SecondaryButton}"
                        Command="{Binding GoBackCommand}"
                        HorizontalAlignment="Right"
                        Padding="16,8" />
            </Grid>
        </Border>
    </Grid>
</UserControl>
