<UserControl x:Class="ZeroInstall.App.Views.CaptureConfigView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:converters="clr-namespace:ZeroInstall.App.Converters"
             mc:Ignorable="d"
             d:DesignHeight="550" d:DesignWidth="800">

    <UserControl.Resources>
        <converters:TransportMethodToVisibilityConverter x:Key="TransportToVisibility" />
        <converters:InverseBoolConverter x:Key="InverseBool" />
        <converters:NonEmptyStringToVisibilityConverter x:Key="NonEmptyStringToVis" />
        <BooleanToVisibilityConverter x:Key="BoolToVis" />
    </UserControl.Resources>

    <Grid Background="{StaticResource SurfaceLightGrayBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Background="{StaticResource BackgroundWhiteBrush}"
                BorderBrush="{StaticResource BorderGrayBrush}"
                BorderThickness="0,0,0,1"
                Padding="20,14">
            <TextBlock Text="Configure Capture"
                       Style="{StaticResource SubheaderText}"
                       FontSize="18" />
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="20,16">
            <StackPanel MaxWidth="600" HorizontalAlignment="Left">

                <!-- BitLocker Warning Banner -->
                <Border Background="#FFF3E0"
                        BorderBrush="#F57C00"
                        BorderThickness="1" CornerRadius="6"
                        Padding="14,10"
                        Margin="0,0,0,16"
                        Visibility="{Binding ShowBitLockerWarning, Converter={StaticResource BoolToVis}}">
                    <TextBlock Text="{Binding BitLockerWarning}"
                               FontSize="12"
                               Foreground="#E65100"
                               TextWrapping="Wrap" />
                </Border>

                <!-- Firmware Information Panel -->
                <Border Background="{StaticResource BackgroundWhiteBrush}"
                        BorderBrush="{StaticResource BorderGrayBrush}"
                        BorderThickness="1" CornerRadius="6"
                        Padding="16,12"
                        Margin="0,0,0,12"
                        Visibility="{Binding ShowFirmwareInfo, Converter={StaticResource BoolToVis}}">
                    <StackPanel>
                        <TextBlock Text="Firmware Information"
                                   FontWeight="SemiBold" FontSize="14"
                                   Foreground="{StaticResource PrimaryTealBrush}"
                                   Margin="0,0,0,8" />
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="130" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>

                            <TextBlock Grid.Row="0" Grid.Column="0" Text="Firmware Type:" FontSize="12" Margin="0,0,0,4" />
                            <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding FirmwareTypeDisplay}" FontSize="12" FontWeight="SemiBold" Margin="0,0,0,4" />

                            <TextBlock Grid.Row="1" Grid.Column="0" Text="BIOS:" FontSize="12" Margin="0,0,0,4" />
                            <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding BiosInfoDisplay}" FontSize="12" Margin="0,0,0,4" />

                            <TextBlock Grid.Row="2" Grid.Column="0" Text="System:" FontSize="12" Margin="0,0,0,4" />
                            <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding SystemInfoDisplay}" FontSize="12" Margin="0,0,0,4" />

                            <TextBlock Grid.Row="3" Grid.Column="0" Text="Secure Boot:" FontSize="12" Margin="0,0,0,4" />
                            <TextBlock Grid.Row="3" Grid.Column="1" Text="{Binding SecureBootDisplay}" FontSize="12" Margin="0,0,0,4" />

                            <TextBlock Grid.Row="4" Grid.Column="0" Text="TPM:" FontSize="12" Margin="0,0,0,4" />
                            <TextBlock Grid.Row="4" Grid.Column="1" Text="{Binding TpmDisplay}" FontSize="12" Margin="0,0,0,4" />
                        </Grid>

                        <CheckBox Content="Include BCD store backup"
                                  IsChecked="{Binding IncludeBcdBackup}"
                                  Margin="0,8,0,4"
                                  FontSize="12" />

                        <!-- Firmware Warning Banner -->
                        <Border Background="#FFF3E0"
                                BorderBrush="#F57C00"
                                BorderThickness="1" CornerRadius="4"
                                Padding="10,8"
                                Margin="0,8,0,0"
                                Visibility="{Binding ShowFirmwareWarning, Converter={StaticResource BoolToVis}}">
                            <TextBlock Text="{Binding FirmwareWarning}"
                                       FontSize="11"
                                       Foreground="#E65100"
                                       TextWrapping="Wrap" />
                        </Border>
                    </StackPanel>
                </Border>

                <!-- Output Location -->
                <TextBlock Text="Output Location"
                           Style="{StaticResource SubheaderText}"
                           Margin="0,0,0,8" />
                <Grid Margin="0,0,0,20">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBox Grid.Column="0"
                             Text="{Binding OutputPath, UpdateSourceTrigger=PropertyChanged}"
                             Padding="8,6"
                             FontSize="13"
                             VerticalContentAlignment="Center" />
                    <Button Grid.Column="1"
                            Content="Browse"
                            Style="{StaticResource SecondaryButton}"
                            Command="{Binding BrowseOutputCommand}"
                            Padding="12,6"
                            Margin="8,0,0,0" />
                </Grid>

                <!-- Transport Method -->
                <TextBlock Text="Transport Method"
                           Style="{StaticResource SubheaderText}"
                           Margin="0,0,0,8" />
                <ComboBox ItemsSource="{Binding TransportMethods}"
                          SelectedItem="{Binding SelectedTransport}"
                          Padding="8,6"
                          FontSize="13"
                          Margin="0,0,0,12" />

                <!-- Network Share Config -->
                <Border Background="{StaticResource BackgroundWhiteBrush}"
                        BorderBrush="{StaticResource BorderGrayBrush}"
                        BorderThickness="1" CornerRadius="6"
                        Padding="16,12"
                        Margin="0,0,0,12"
                        Visibility="{Binding SelectedTransport, Converter={StaticResource TransportToVisibility}, ConverterParameter=NetworkShare}">
                    <StackPanel>
                        <TextBlock Text="Network Share Settings"
                                   FontWeight="SemiBold" FontSize="14"
                                   Foreground="{StaticResource PrimaryTealBrush}"
                                   Margin="0,0,0,8" />
                        <TextBlock Text="Share Path (UNC)" FontSize="12" Margin="0,0,0,4" />
                        <TextBox Text="{Binding NetworkSharePath, UpdateSourceTrigger=PropertyChanged}"
                                 Padding="8,6" FontSize="13" Margin="0,0,0,8" />
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="12" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Username" FontSize="12" Margin="0,0,0,4" />
                                <TextBox Text="{Binding NetworkShareUsername, UpdateSourceTrigger=PropertyChanged}"
                                         Padding="8,6" FontSize="13" />
                            </StackPanel>
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Password" FontSize="12" Margin="0,0,0,4" />
                                <PasswordBox Padding="8,6" FontSize="13" />
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- Direct WiFi Config -->
                <Border Background="{StaticResource BackgroundWhiteBrush}"
                        BorderBrush="{StaticResource BorderGrayBrush}"
                        BorderThickness="1" CornerRadius="6"
                        Padding="16,12"
                        Margin="0,0,0,12"
                        Visibility="{Binding SelectedTransport, Converter={StaticResource TransportToVisibility}, ConverterParameter=DirectWiFi}">
                    <StackPanel>
                        <TextBlock Text="Direct WiFi Settings"
                                   FontWeight="SemiBold" FontSize="14"
                                   Foreground="{StaticResource PrimaryTealBrush}"
                                   Margin="0,0,0,8" />
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="12" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Port" FontSize="12" Margin="0,0,0,4" />
                                <TextBox Text="{Binding DirectWiFiPort, UpdateSourceTrigger=PropertyChanged}"
                                         Padding="8,6" FontSize="13" Width="100" />
                            </StackPanel>
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Shared Key" FontSize="12" Margin="0,0,0,4" />
                                <TextBox Text="{Binding DirectWiFiSharedKey, UpdateSourceTrigger=PropertyChanged}"
                                         Padding="8,6" FontSize="13" />
                            </StackPanel>
                        </Grid>
                    </StackPanel>
                </Border>

                <!-- SFTP Config -->
                <Border Background="{StaticResource BackgroundWhiteBrush}"
                        BorderBrush="{StaticResource BorderGrayBrush}"
                        BorderThickness="1" CornerRadius="6"
                        Padding="16,12"
                        Margin="0,0,0,12"
                        Visibility="{Binding SelectedTransport, Converter={StaticResource TransportToVisibility}, ConverterParameter=Sftp}">
                    <StackPanel>
                        <TextBlock Text="SFTP Settings"
                                   FontWeight="SemiBold" FontSize="14"
                                   Foreground="{StaticResource PrimaryTealBrush}"
                                   Margin="0,0,0,8" />

                        <!-- Host + Port -->
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="12" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Host" FontSize="12" Margin="0,0,0,4" />
                                <TextBox Text="{Binding SftpHost, UpdateSourceTrigger=PropertyChanged}"
                                         Padding="8,6" FontSize="13" />
                            </StackPanel>
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Port" FontSize="12" Margin="0,0,0,4" />
                                <TextBox Text="{Binding SftpPort, UpdateSourceTrigger=PropertyChanged}"
                                         Padding="8,6" FontSize="13" Width="80" />
                            </StackPanel>
                        </Grid>

                        <!-- Username + Password -->
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="12" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Username" FontSize="12" Margin="0,0,0,4" />
                                <TextBox Text="{Binding SftpUsername, UpdateSourceTrigger=PropertyChanged}"
                                         Padding="8,6" FontSize="13" />
                            </StackPanel>
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Password" FontSize="12" Margin="0,0,0,4" />
                                <PasswordBox Padding="8,6" FontSize="13" />
                            </StackPanel>
                        </Grid>

                        <!-- SSH Key Path + Browse + Key Passphrase -->
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                                <ColumnDefinition Width="12" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="SSH Key Path" FontSize="12" Margin="0,0,0,4" />
                                <TextBox Text="{Binding SftpPrivateKeyPath, UpdateSourceTrigger=PropertyChanged}"
                                         Padding="8,6" FontSize="13" />
                            </StackPanel>
                            <Button Grid.Column="1"
                                    Content="..."
                                    Style="{StaticResource SecondaryButton}"
                                    Command="{Binding SftpBrowseKeyFileCommand}"
                                    Padding="8,6" Margin="4,18,0,0"
                                    VerticalAlignment="Bottom" />
                            <StackPanel Grid.Column="3">
                                <TextBlock Text="Key Passphrase" FontSize="12" Margin="0,0,0,4" />
                                <PasswordBox Padding="8,6" FontSize="13" />
                            </StackPanel>
                        </Grid>

                        <!-- Remote Base Path + Browse NAS -->
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Remote Base Path" FontSize="12" Margin="0,0,0,4" />
                                <TextBox Text="{Binding SftpRemoteBasePath, UpdateSourceTrigger=PropertyChanged}"
                                         Padding="8,6" FontSize="13" />
                            </StackPanel>
                            <Button Grid.Column="1"
                                    Content="Connect &amp; Browse"
                                    Style="{StaticResource SecondaryButton}"
                                    Command="{Binding SftpConnectCommand}"
                                    Padding="12,6" Margin="8,18,0,0"
                                    VerticalAlignment="Bottom" />
                        </Grid>

                        <!-- NAS Browser Panel -->
                        <Border Background="{StaticResource SurfaceLightGrayBrush}"
                                BorderBrush="{StaticResource BorderGrayBrush}"
                                BorderThickness="1" CornerRadius="4"
                                Padding="12,8"
                                Margin="0,0,0,8"
                                Visibility="{Binding SftpIsConnected, Converter={StaticResource BoolToVis}}">
                            <StackPanel>
                                <TextBlock Text="{Binding SftpCurrentBrowsePath}"
                                           FontSize="12" FontWeight="SemiBold"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           Margin="0,0,0,6" />
                                <ListBox ItemsSource="{Binding SftpBrowseItems}"
                                         MaxHeight="150"
                                         FontSize="12"
                                         Margin="0,0,0,6">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock>
                                                <Run Text="{Binding Name, Mode=OneWay}" />
                                                <Run Text="{Binding IsDirectory, Mode=OneWay, StringFormat=' [{0}]'}"
                                                     Foreground="{StaticResource TextSecondaryBrush}" />
                                            </TextBlock>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </StackPanel>
                        </Border>

                        <!-- Encryption Passphrase + Compress -->
                        <TextBlock Text="Encryption Passphrase (optional)" FontSize="12" Margin="0,0,0,4" />
                        <PasswordBox Padding="8,6" FontSize="13" Margin="0,0,0,8" />
                        <CheckBox Content="Compress before upload"
                                  IsChecked="{Binding SftpCompressBeforeUpload}"
                                  Margin="0,0,0,4" />

                        <!-- Connection Status -->
                        <TextBlock Text="{Binding SftpConnectionStatus}"
                                   FontSize="11"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   Margin="0,4,0,0" />
                    </StackPanel>
                </Border>

                <!-- Bluetooth Config -->
                <Border Background="{StaticResource BackgroundWhiteBrush}"
                        BorderBrush="{StaticResource BorderGrayBrush}"
                        BorderThickness="1" CornerRadius="6"
                        Padding="16,12"
                        Margin="0,0,0,12"
                        Visibility="{Binding SelectedTransport, Converter={StaticResource TransportToVisibility}, ConverterParameter=Bluetooth}">
                    <StackPanel>
                        <TextBlock Text="Bluetooth Settings"
                                   FontWeight="SemiBold" FontSize="14"
                                   Foreground="{StaticResource PrimaryTealBrush}"
                                   Margin="0,0,0,8" />

                        <!-- Speed Warning Banner -->
                        <Border Background="#FFF3E0"
                                BorderBrush="#F57C00"
                                BorderThickness="1" CornerRadius="4"
                                Padding="10,8"
                                Margin="0,0,0,10">
                            <TextBlock Text="Bluetooth Classic tops out at ~250 KB/s. Suitable for small transfers (settings, profiles) but slow for large data."
                                       FontSize="11"
                                       Foreground="#E65100"
                                       TextWrapping="Wrap" />
                        </Border>

                        <!-- Server/Client Radio Buttons -->
                        <TextBlock Text="Mode" FontSize="12" Margin="0,0,0,4" />
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                            <RadioButton Content="Server (listen)"
                                         IsChecked="{Binding BluetoothIsServer}"
                                         Margin="0,0,16,0" FontSize="12" />
                            <RadioButton Content="Client (connect)"
                                         IsChecked="{Binding BluetoothIsServer, Converter={StaticResource InverseBool}}"
                                         FontSize="12" />
                        </StackPanel>

                        <!-- Client Mode: Scan + Device List (hidden when server) -->
                        <StackPanel>
                            <StackPanel.Style>
                                <Style TargetType="StackPanel">
                                    <Setter Property="Visibility" Value="Visible" />
                                    <Style.Triggers>
                                        <DataTrigger Binding="{Binding BluetoothIsServer}" Value="True">
                                            <Setter Property="Visibility" Value="Collapsed" />
                                        </DataTrigger>
                                    </Style.Triggers>
                                </Style>
                            </StackPanel.Style>
                            <Button Content="Scan for Devices"
                                    Style="{StaticResource SecondaryButton}"
                                    Command="{Binding BluetoothScanCommand}"
                                    Padding="12,6" Margin="0,0,0,8" />

                            <ListBox ItemsSource="{Binding BluetoothDiscoveredDevices}"
                                     MaxHeight="120"
                                     FontSize="12"
                                     Margin="0,0,0,8"
                                     x:Name="BluetoothDeviceList">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <TextBlock>
                                            <Run Text="{Binding DeviceName, Mode=OneWay}" />
                                            <Run Text=" (" /><Run Text="{Binding AddressString, Mode=OneWay}" /><Run Text=")" />
                                        </TextBlock>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>

                            <Button Content="Pair &amp; Connect"
                                    Style="{StaticResource AccentButton}"
                                    Command="{Binding BluetoothPairAndConnectCommand}"
                                    CommandParameter="{Binding SelectedItem, ElementName=BluetoothDeviceList}"
                                    Padding="12,6" Margin="0,0,0,8" />
                        </StackPanel>

                        <!-- Dynamic Speed Warning -->
                        <Border Background="#FFF3E0"
                                BorderBrush="#F57C00"
                                BorderThickness="1" CornerRadius="4"
                                Padding="10,6"
                                Margin="0,0,0,8"
                                Visibility="{Binding BluetoothSpeedWarning, Converter={StaticResource NonEmptyStringToVis}}">
                            <TextBlock Text="{Binding BluetoothSpeedWarning}"
                                       FontSize="11"
                                       Foreground="#E65100"
                                       TextWrapping="Wrap" />
                        </Border>

                        <!-- Connection Status -->
                        <TextBlock Text="{Binding BluetoothConnectionStatus}"
                                   FontSize="11"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   Margin="0,4,0,0" />
                    </StackPanel>
                </Border>

                <!-- Summary -->
                <TextBlock Text="Summary"
                           Style="{StaticResource SubheaderText}"
                           Margin="0,8,0,12" />
                <StackPanel Orientation="Horizontal" Margin="0,0,0,12">
                    <Border Background="{StaticResource SurfaceLightGrayBrush}"
                            BorderBrush="{StaticResource BorderGrayBrush}"
                            BorderThickness="1" CornerRadius="6"
                            Padding="16,10" Margin="0,0,12,0">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="{Binding PackageItemCount}"
                                       FontSize="20" FontWeight="Bold"
                                       Foreground="{StaticResource PrimaryTealBrush}"
                                       HorizontalAlignment="Center" />
                            <TextBlock Text="Package"
                                       FontSize="11" Foreground="{StaticResource TextSecondaryBrush}"
                                       HorizontalAlignment="Center" />
                        </StackPanel>
                    </Border>
                    <Border Background="{StaticResource SurfaceLightGrayBrush}"
                            BorderBrush="{StaticResource BorderGrayBrush}"
                            BorderThickness="1" CornerRadius="6"
                            Padding="16,10" Margin="0,0,12,0">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="{Binding RegFileItemCount}"
                                       FontSize="20" FontWeight="Bold"
                                       Foreground="{StaticResource PrimaryTealBrush}"
                                       HorizontalAlignment="Center" />
                            <TextBlock Text="Registry"
                                       FontSize="11" Foreground="{StaticResource TextSecondaryBrush}"
                                       HorizontalAlignment="Center" />
                        </StackPanel>
                    </Border>
                    <Border Background="{StaticResource SurfaceLightGrayBrush}"
                            BorderBrush="{StaticResource BorderGrayBrush}"
                            BorderThickness="1" CornerRadius="6"
                            Padding="16,10">
                        <StackPanel HorizontalAlignment="Center">
                            <TextBlock Text="{Binding ProfileItemCount}"
                                       FontSize="20" FontWeight="Bold"
                                       Foreground="{StaticResource PrimaryTealBrush}"
                                       HorizontalAlignment="Center" />
                            <TextBlock Text="Profile"
                                       FontSize="11" Foreground="{StaticResource TextSecondaryBrush}"
                                       HorizontalAlignment="Center" />
                        </StackPanel>
                    </Border>
                </StackPanel>

                <TextBlock Margin="0,0,0,8">
                    <Run Text="Total: " />
                    <Run Text="{Binding TotalSizeFormatted, Mode=OneWay}" FontWeight="SemiBold" />
                    <Run Text=" estimated" />
                </TextBlock>
            </StackPanel>
        </ScrollViewer>

        <!-- Bottom Bar -->
        <Border Grid.Row="2"
                Background="{StaticResource BackgroundWhiteBrush}"
                BorderBrush="{StaticResource BorderGrayBrush}"
                BorderThickness="0,1,0,0"
                Padding="20,10">
            <Button Content="Start Capture"
                    Style="{StaticResource AccentButton}"
                    Command="{Binding StartCaptureCommand}"
                    HorizontalAlignment="Right"
                    Padding="24,8" />
        </Border>
    </Grid>
</UserControl>
