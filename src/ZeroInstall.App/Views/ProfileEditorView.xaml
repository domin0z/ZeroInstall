<UserControl x:Class="ZeroInstall.App.Views.ProfileEditorView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="800">

    <Grid Background="{StaticResource SurfaceLightGrayBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Background="{StaticResource BackgroundWhiteBrush}"
                BorderBrush="{StaticResource BorderGrayBrush}"
                BorderThickness="0,0,0,1"
                Padding="20,14">
            <TextBlock Text="Profile Editor"
                       Style="{StaticResource SubheaderText}"
                       FontSize="18" />
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="20,16">
            <StackPanel MaxWidth="600" HorizontalAlignment="Left">

                <!-- Metadata -->
                <TextBlock Text="Profile Name"
                           Style="{StaticResource SubheaderText}"
                           Margin="0,0,0,4" />
                <TextBox Text="{Binding ProfileName, UpdateSourceTrigger=PropertyChanged}"
                         Padding="8,6" FontSize="13" Margin="0,0,0,12" />

                <TextBlock Text="Description"
                           Style="{StaticResource SubheaderText}"
                           Margin="0,0,0,4" />
                <TextBox Text="{Binding Description, UpdateSourceTrigger=PropertyChanged}"
                         Padding="8,6" FontSize="13" Margin="0,0,0,12"
                         AcceptsReturn="True" TextWrapping="Wrap" MinHeight="48" />

                <TextBlock Text="Author"
                           Style="{StaticResource SubheaderText}"
                           Margin="0,0,0,4" />
                <TextBox Text="{Binding Author, UpdateSourceTrigger=PropertyChanged}"
                         Padding="8,6" FontSize="13" Margin="0,0,0,20" />

                <!-- User Profiles -->
                <Border Background="{StaticResource BackgroundWhiteBrush}"
                        BorderBrush="{StaticResource BorderGrayBrush}"
                        BorderThickness="1" CornerRadius="6"
                        Padding="16,12" Margin="0,0,0,12">
                    <StackPanel>
                        <CheckBox Content="User Profiles"
                                  IsChecked="{Binding UserProfilesEnabled}"
                                  FontWeight="SemiBold" FontSize="14"
                                  Margin="0,0,0,8" />
                        <CheckBox Content="Include all folders"
                                  IsChecked="{Binding UserProfilesIncludeAll}"
                                  Margin="20,0,0,0" FontSize="13" />
                    </StackPanel>
                </Border>

                <!-- Applications -->
                <Border Background="{StaticResource BackgroundWhiteBrush}"
                        BorderBrush="{StaticResource BorderGrayBrush}"
                        BorderThickness="1" CornerRadius="6"
                        Padding="16,12" Margin="0,0,0,12">
                    <StackPanel>
                        <CheckBox Content="Applications"
                                  IsChecked="{Binding ApplicationsEnabled}"
                                  FontWeight="SemiBold" FontSize="14"
                                  Margin="0,0,0,8" />
                        <StackPanel Orientation="Horizontal" Margin="20,0,0,0">
                            <TextBlock Text="Preferred Tier:"
                                       VerticalAlignment="Center"
                                       FontSize="13"
                                       Margin="0,0,8,0" />
                            <ComboBox SelectedItem="{Binding PreferredTier}"
                                      FontSize="13" Padding="8,4" MinWidth="120">
                                <ComboBox.Items>
                                    <x:Static Member="core:MigrationTier.Package"
                                              xmlns:core="clr-namespace:ZeroInstall.Core.Enums;assembly=ZeroInstall.Core" />
                                    <x:Static Member="core:MigrationTier.RegistryFile"
                                              xmlns:core="clr-namespace:ZeroInstall.Core.Enums;assembly=ZeroInstall.Core" />
                                    <x:Static Member="core:MigrationTier.DiskClone"
                                              xmlns:core="clr-namespace:ZeroInstall.Core.Enums;assembly=ZeroInstall.Core" />
                                </ComboBox.Items>
                            </ComboBox>
                        </StackPanel>
                    </StackPanel>
                </Border>

                <!-- Browser Data -->
                <Border Background="{StaticResource BackgroundWhiteBrush}"
                        BorderBrush="{StaticResource BorderGrayBrush}"
                        BorderThickness="1" CornerRadius="6"
                        Padding="16,12" Margin="0,0,0,12">
                    <StackPanel>
                        <CheckBox Content="Browser Data"
                                  IsChecked="{Binding BrowserDataEnabled}"
                                  FontWeight="SemiBold" FontSize="14"
                                  Margin="0,0,0,8" />
                        <CheckBox Content="Bookmarks"
                                  IsChecked="{Binding IncludeBookmarks}"
                                  Margin="20,0,0,4" FontSize="13" />
                        <CheckBox Content="Extensions"
                                  IsChecked="{Binding IncludeExtensions}"
                                  Margin="20,0,0,4" FontSize="13" />
                        <CheckBox Content="Passwords"
                                  IsChecked="{Binding IncludePasswords}"
                                  Margin="20,0,0,0" FontSize="13" />
                    </StackPanel>
                </Border>

                <!-- System Settings -->
                <Border Background="{StaticResource BackgroundWhiteBrush}"
                        BorderBrush="{StaticResource BorderGrayBrush}"
                        BorderThickness="1" CornerRadius="6"
                        Padding="16,12" Margin="0,0,0,12">
                    <StackPanel>
                        <CheckBox Content="System Settings"
                                  IsChecked="{Binding SystemSettingsEnabled}"
                                  FontWeight="SemiBold" FontSize="14"
                                  Margin="0,0,0,8" />
                        <CheckBox Content="WiFi Profiles"
                                  IsChecked="{Binding WifiProfiles}"
                                  Margin="20,0,0,4" FontSize="13" />
                        <CheckBox Content="Printers"
                                  IsChecked="{Binding Printers}"
                                  Margin="20,0,0,4" FontSize="13" />
                        <CheckBox Content="Mapped Drives"
                                  IsChecked="{Binding MappedDrives}"
                                  Margin="20,0,0,4" FontSize="13" />
                        <CheckBox Content="Environment Variables"
                                  IsChecked="{Binding EnvironmentVariables}"
                                  Margin="20,0,0,4" FontSize="13" />
                        <CheckBox Content="Scheduled Tasks"
                                  IsChecked="{Binding ScheduledTasks}"
                                  Margin="20,0,0,4" FontSize="13" />
                        <CheckBox Content="Credentials"
                                  IsChecked="{Binding Credentials}"
                                  Margin="20,0,0,4" FontSize="13" />
                        <CheckBox Content="Certificates"
                                  IsChecked="{Binding Certificates}"
                                  Margin="20,0,0,4" FontSize="13" />
                        <CheckBox Content="Default Apps"
                                  IsChecked="{Binding DefaultApps}"
                                  Margin="20,0,0,0" FontSize="13" />
                    </StackPanel>
                </Border>

                <!-- Transport Preferences -->
                <Border Background="{StaticResource BackgroundWhiteBrush}"
                        BorderBrush="{StaticResource BorderGrayBrush}"
                        BorderThickness="1" CornerRadius="6"
                        Padding="16,12" Margin="0,0,0,12">
                    <StackPanel>
                        <TextBlock Text="Transport Preferences"
                                   FontWeight="SemiBold" FontSize="14"
                                   Margin="0,0,0,8" />
                        <StackPanel Orientation="Horizontal" Margin="0,0,0,8">
                            <TextBlock Text="Preferred Method:"
                                       VerticalAlignment="Center" FontSize="13"
                                       Margin="0,0,8,0" />
                            <ComboBox SelectedItem="{Binding PreferredTransport}"
                                      FontSize="13" Padding="8,4" MinWidth="140">
                                <ComboBox.Items>
                                    <x:Static Member="core:TransportMethod.ExternalStorage"
                                              xmlns:core="clr-namespace:ZeroInstall.Core.Enums;assembly=ZeroInstall.Core" />
                                    <x:Static Member="core:TransportMethod.NetworkShare"
                                              xmlns:core="clr-namespace:ZeroInstall.Core.Enums;assembly=ZeroInstall.Core" />
                                    <x:Static Member="core:TransportMethod.DirectWiFi"
                                              xmlns:core="clr-namespace:ZeroInstall.Core.Enums;assembly=ZeroInstall.Core" />
                                </ComboBox.Items>
                            </ComboBox>
                        </StackPanel>
                        <TextBlock Text="NAS Path:" FontSize="13" Margin="0,0,0,4" />
                        <TextBox Text="{Binding NasPath, UpdateSourceTrigger=PropertyChanged}"
                                 Padding="8,6" FontSize="13" Margin="0,0,0,8" />
                        <CheckBox Content="Enable compression"
                                  IsChecked="{Binding Compression}"
                                  FontSize="13" />
                    </StackPanel>
                </Border>

                <!-- Status -->
                <TextBlock Text="{Binding StatusMessage}"
                           Style="{StaticResource BodyText}"
                           Foreground="{StaticResource TextSecondaryBrush}"
                           Margin="0,8,0,0" />
            </StackPanel>
        </ScrollViewer>

        <!-- Bottom Bar -->
        <Border Grid.Row="2"
                Background="{StaticResource BackgroundWhiteBrush}"
                BorderBrush="{StaticResource BorderGrayBrush}"
                BorderThickness="0,1,0,0"
                Padding="20,10">
            <Grid>
                <Button Content="Save"
                        Style="{StaticResource AccentButton}"
                        Command="{Binding SaveCommand}"
                        HorizontalAlignment="Right"
                        Padding="24,8" />
                <Button Content="Cancel"
                        Style="{StaticResource SecondaryButton}"
                        Command="{Binding CancelCommand}"
                        HorizontalAlignment="Left"
                        Padding="16,8" />
            </Grid>
        </Border>
    </Grid>
</UserControl>
