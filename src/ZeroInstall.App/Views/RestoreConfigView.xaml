<UserControl x:Class="ZeroInstall.App.Views.RestoreConfigView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:converters="clr-namespace:ZeroInstall.App.Converters"
             mc:Ignorable="d"
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <converters:BoolToVisibilityConverter x:Key="BoolToVisibility" />
        <converters:TransportMethodToVisibilityConverter x:Key="TransportToVisibility" />
    </UserControl.Resources>

    <Grid Background="{StaticResource SurfaceLightGrayBrush}">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0"
                Background="{StaticResource BackgroundWhiteBrush}"
                BorderBrush="{StaticResource BorderGrayBrush}"
                BorderThickness="0,0,0,1"
                Padding="20,14">
            <TextBlock Text="Configure Restore"
                       Style="{StaticResource SubheaderText}"
                       FontSize="18" />
        </Border>

        <!-- Content -->
        <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="20,16">
            <StackPanel MaxWidth="600" HorizontalAlignment="Left">

                <!-- Capture Location -->
                <TextBlock Text="Capture Location"
                           Style="{StaticResource SubheaderText}"
                           Margin="0,0,0,8" />
                <Grid Margin="0,0,0,8">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <TextBox Grid.Column="0"
                             Text="{Binding InputPath, UpdateSourceTrigger=PropertyChanged}"
                             Padding="8,6"
                             FontSize="13"
                             VerticalContentAlignment="Center" />
                    <Button Grid.Column="1"
                            Content="Browse"
                            Style="{StaticResource SecondaryButton}"
                            Command="{Binding BrowseInputCommand}"
                            Padding="12,6"
                            Margin="8,0,0,0" />
                    <Button Grid.Column="2"
                            Content="Load"
                            Style="{StaticResource AccentButton}"
                            Command="{Binding LoadCaptureCommand}"
                            Padding="12,6"
                            Margin="8,0,0,0" />
                </Grid>

                <TextBlock Text="{Binding CaptureInfo}"
                           Style="{StaticResource BodyText}"
                           Foreground="{StaticResource TextSecondaryBrush}"
                           Margin="0,0,0,24" />

                <!-- SFTP Config for Restore -->
                <Border Background="{StaticResource BackgroundWhiteBrush}"
                        BorderBrush="{StaticResource BorderGrayBrush}"
                        BorderThickness="1" CornerRadius="6"
                        Padding="16,12"
                        Margin="0,0,0,12"
                        Visibility="{Binding SelectedTransport, Converter={StaticResource TransportToVisibility}, ConverterParameter=Sftp}">
                    <StackPanel>
                        <TextBlock Text="SFTP Settings"
                                   FontWeight="SemiBold" FontSize="14"
                                   Foreground="{StaticResource PrimaryTealBrush}"
                                   Margin="0,0,0,8" />

                        <!-- Host + Port -->
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="12" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Host" FontSize="12" Margin="0,0,0,4" />
                                <TextBox Text="{Binding SftpHost, UpdateSourceTrigger=PropertyChanged}"
                                         Padding="8,6" FontSize="13" />
                            </StackPanel>
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Port" FontSize="12" Margin="0,0,0,4" />
                                <TextBox Text="{Binding SftpPort, UpdateSourceTrigger=PropertyChanged}"
                                         Padding="8,6" FontSize="13" Width="80" />
                            </StackPanel>
                        </Grid>

                        <!-- Username + Password -->
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="12" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Username" FontSize="12" Margin="0,0,0,4" />
                                <TextBox Text="{Binding SftpUsername, UpdateSourceTrigger=PropertyChanged}"
                                         Padding="8,6" FontSize="13" />
                            </StackPanel>
                            <StackPanel Grid.Column="2">
                                <TextBlock Text="Password" FontSize="12" Margin="0,0,0,4" />
                                <PasswordBox Padding="8,6" FontSize="13" />
                            </StackPanel>
                        </Grid>

                        <!-- Remote Base Path + Connect -->
                        <Grid Margin="0,0,0,8">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Remote Base Path" FontSize="12" Margin="0,0,0,4" />
                                <TextBox Text="{Binding SftpRemoteBasePath, UpdateSourceTrigger=PropertyChanged}"
                                         Padding="8,6" FontSize="13" />
                            </StackPanel>
                            <Button Grid.Column="1"
                                    Content="Connect &amp; Browse"
                                    Style="{StaticResource SecondaryButton}"
                                    Command="{Binding SftpConnectCommand}"
                                    Padding="12,6" Margin="8,18,0,0"
                                    VerticalAlignment="Bottom" />
                        </Grid>

                        <!-- NAS Browser Panel -->
                        <Border Background="{StaticResource SurfaceLightGrayBrush}"
                                BorderBrush="{StaticResource BorderGrayBrush}"
                                BorderThickness="1" CornerRadius="4"
                                Padding="12,8"
                                Margin="0,0,0,8"
                                Visibility="{Binding SftpIsConnected, Converter={StaticResource BoolToVisibility}}">
                            <StackPanel>
                                <TextBlock Text="{Binding SftpCurrentBrowsePath}"
                                           FontSize="12" FontWeight="SemiBold"
                                           Foreground="{StaticResource TextSecondaryBrush}"
                                           Margin="0,0,0,6" />
                                <ListBox ItemsSource="{Binding SftpBrowseItems}"
                                         MaxHeight="150"
                                         FontSize="12"
                                         Margin="0,0,0,6">
                                    <ListBox.ItemTemplate>
                                        <DataTemplate>
                                            <TextBlock>
                                                <Run Text="{Binding Name, Mode=OneWay}" />
                                                <Run Text="{Binding IsDirectory, Mode=OneWay, StringFormat=' [{0}]'}"
                                                     Foreground="{StaticResource TextSecondaryBrush}" />
                                            </TextBlock>
                                        </DataTemplate>
                                    </ListBox.ItemTemplate>
                                </ListBox>
                            </StackPanel>
                        </Border>

                        <!-- Encryption Passphrase -->
                        <TextBlock Text="Encryption Passphrase (for decryption)" FontSize="12" Margin="0,0,0,4" />
                        <PasswordBox Padding="8,6" FontSize="13" Margin="0,0,0,8" />

                        <!-- Connection Status -->
                        <TextBlock Text="{Binding SftpConnectionStatus}"
                                   FontSize="11"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   Margin="0,4,0,0" />
                    </StackPanel>
                </Border>

                <!-- User Mapping -->
                <StackPanel Visibility="{Binding HasValidCapture, Converter={StaticResource BoolToVisibility}}">
                    <TextBlock Text="User Mapping"
                               Style="{StaticResource SubheaderText}"
                               Margin="0,0,0,8" />
                    <TextBlock Text="Map source users to destination user accounts."
                               Style="{StaticResource BodyText}"
                               Foreground="{StaticResource TextSecondaryBrush}"
                               Margin="0,0,0,12" />

                    <!-- Header Row -->
                    <Grid Margin="0,0,0,4">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="24" />
                            <ColumnDefinition Width="*" />
                            <ColumnDefinition Width="80" />
                        </Grid.ColumnDefinitions>
                        <TextBlock Grid.Column="0" Text="Source User"
                                   FontWeight="SemiBold" FontSize="12"
                                   Foreground="{StaticResource TextSecondaryBrush}" />
                        <TextBlock Grid.Column="2" Text="Destination User"
                                   FontWeight="SemiBold" FontSize="12"
                                   Foreground="{StaticResource TextSecondaryBrush}" />
                        <TextBlock Grid.Column="3" Text="Create"
                                   FontWeight="SemiBold" FontSize="12"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   HorizontalAlignment="Center" />
                    </Grid>

                    <ItemsControl ItemsSource="{Binding UserMappings}">
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Grid Margin="0,2">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="24" />
                                        <ColumnDefinition Width="*" />
                                        <ColumnDefinition Width="80" />
                                    </Grid.ColumnDefinitions>

                                    <TextBlock Grid.Column="0"
                                               Text="{Binding SourceUsername}"
                                               VerticalAlignment="Center"
                                               FontSize="13"
                                               Foreground="{StaticResource TextPrimaryBrush}" />
                                    <TextBlock Grid.Column="1" Text="â†’"
                                               HorizontalAlignment="Center"
                                               VerticalAlignment="Center"
                                               Foreground="{StaticResource TextSecondaryBrush}" />
                                    <TextBox Grid.Column="2"
                                             Text="{Binding DestinationUsername, UpdateSourceTrigger=PropertyChanged}"
                                             Padding="6,4"
                                             FontSize="13"
                                             VerticalContentAlignment="Center" />
                                    <CheckBox Grid.Column="3"
                                              IsChecked="{Binding CreateIfMissing}"
                                              HorizontalAlignment="Center"
                                              VerticalAlignment="Center" />
                                </Grid>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>

        <!-- Bottom Bar -->
        <Border Grid.Row="2"
                Background="{StaticResource BackgroundWhiteBrush}"
                BorderBrush="{StaticResource BorderGrayBrush}"
                BorderThickness="0,1,0,0"
                Padding="20,10">
            <Button Content="Start Restore"
                    Style="{StaticResource AccentButton}"
                    Command="{Binding StartRestoreCommand}"
                    HorizontalAlignment="Right"
                    Padding="24,8" />
        </Border>
    </Grid>
</UserControl>
